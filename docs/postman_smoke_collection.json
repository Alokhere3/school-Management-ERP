{
  "info": {
    "name": "School ERP API - Smoke Tests",
    "_postman_id": "erp-smoke-0000-0000-000000000000",
    "description": "Postman collection with request-level tests for smoke testing important flows (login, register, roles, users, students).\nUse the provided environment or supply your own variables.\n",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000", "type": "string" },
    { "key": "token", "value": "", "type": "string" },
    { "key": "email", "value": "alokhere3@gmail.com", "type": "string" },
    { "key": "password", "value": "Alok@1234", "type": "string" }
  ],
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
      },
      "event": [
        { "listen": "test", "script": { "exec": [
          "pm.test('Status code is 2xx', function () { pm.expect(pm.response.code).to.be.within(200, 299); });",
          "try { var json = pm.response.json(); if (json.token) { pm.environment.set('token', json.token); } else if (json.accessToken) { pm.environment.set('token', json.accessToken); } else if (json.data && (json.data.token || json.data.accessToken)) { pm.environment.set('token', json.data.token || json.data.accessToken); } } catch(e) { pm.log('No JSON token'); }"
        ], "type": "text/javascript" } }
      ]
    },
    {
      "name": "Auth - Register (public)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Test Tenant\",\n  \"email\": \"test_admin@example.com\",\n  \"password\": \"Test@1234\"\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{baseUrl}}/api/auth/register", "host": ["{{baseUrl}}"], "path": ["api","auth","register"] }
      },
      "event": [ { "listen": "test", "script": { "exec": [
        "pm.test('Status code is 2xx', function () { pm.expect(pm.response.code).to.be.within(200, 299); });",
        "try { var json = pm.response.json(); pm.test('Response is JSON', function () { pm.expect(json).to.be.an('object'); }); } catch(e) { pm.log('Non-JSON response'); }"
      ], "type": "text/javascript" } } ]
    },
    {
      "name": "Auth - Register With Roles (protected)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" }],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Tenant With Roles\",\n  \"email\": \"tenant_roles@example.com\",\n  \"password\": \"Test@1234\",\n  \"roles\": [\"School Admin\"]\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{baseUrl}}/api/auth/register", "host": ["{{baseUrl}}"], "path": ["api","auth","register"] }
      },
      "event": [ { "listen": "test", "script": { "exec": [
        "pm.test('Status code is 2xx', function () { pm.expect(pm.response.code).to.be.within(200, 299); });",
        "try { var json = pm.response.json(); pm.test('Response contains success or user or token', function () { pm.expect(json.success || json.user || json.token || json.accessToken).to.exist; }); } catch(e) { pm.log('Non-JSON response'); }"
      ], "type": "text/javascript" } } ]
    },
    {
      "name": "Roles - List",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{baseUrl}}/api/roles", "host": ["{{baseUrl}}"], "path": ["api","roles"] }
      },
      "event": [ { "listen": "test", "script": { "exec": [
        "pm.test('Status code is 2xx', function () { pm.expect(pm.response.code).to.be.within(200, 299); });",
        "try { var json = pm.response.json(); pm.test('Response is array or object', function () { pm.expect(json).to.satisfy(function (v) { return Array.isArray(v) || typeof v === 'object'; }); }); } catch(e) { pm.log('Non-JSON response'); }"
      ], "type": "text/javascript" } } ]
    },
    {
      "name": "Users - Create (example)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" }],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"new.user@example.com\",\n  \"password\": \"Password1!\",\n  \"firstName\": \"New\",\n  \"lastName\": \"User\"\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{baseUrl}}/api/users", "host": ["{{baseUrl}}"], "path": ["api","users"] }
      },
      "event": [ { "listen": "test", "script": { "exec": [
        "pm.test('Status code is 2xx', function () { pm.expect(pm.response.code).to.be.within(200, 299); });",
        "try { var json = pm.response.json(); pm.test('User created or returned', function () { pm.expect(json.user || json.id || json.success).to.exist; }); } catch(e) { pm.log('Non-JSON response'); }"
      ], "type": "text/javascript" } } ]
    },
    {
      "name": "Students - List (example protected)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{baseUrl}}/api/students", "host": ["{{baseUrl}}"], "path": ["api","students"] }
      },
      "event": [ { "listen": "test", "script": { "exec": [
        "pm.test('Status code is 2xx', function () { pm.expect(pm.response.code).to.be.within(200, 299); });",
        "try { var json = pm.response.json(); pm.test('Response is array or object', function () { pm.expect(json).to.satisfy(function (v) { return Array.isArray(v) || typeof v === 'object'; }); }); } catch(e) { pm.log('Non-JSON response'); }"
      ], "type": "text/javascript" } } ]
    }
  ]
}
